{
  "name": "message-listener",
  "version": "0.1.0",
  "description": "This is a demo listener for udp server",
  "scripts": {
    "compile": "tsc",
    "start": "concurrently -c \"magenta,cyan\" \"npm:udp-server\" \"npm:http-server\"",
    "udp-server": "node -r dotenv/config ./dist/udpserver/Server.js",
    "http-server": "node -r dotenv/config ./dist/api/Server.js",
    "build": "tsc",
    "test": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"    
  },
  "author": "Wenxin Shi",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/Rockyddt/message-listener.git"
  },  
  "license": "ISC",
  "dependencies": {
    "@azure/event-hubs": "^1.0.8",
    "@azure/event-processor-host": "^1.0.6",
    "@types/azure": "^0.9.20",
    "@types/socket.io": "^2.1.2",
    "azure": "^2.3.1-preview",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.2.0"    
  },
  "devDependencies": {    
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.17",
    "jest": "^23.6.0",
    "prettier": "^1.16.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"    
  },
  "jest": {
    "testEnvironment": "node"
  },
  "files": ["dist/**/*"]
}
